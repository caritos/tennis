{
  "expo": {
    "name": "Play Serve",
    "slug": "play-serve",
    "version": "1.0.0",
    "orientation": "portrait",
    "description": "Connect with tennis players in your local clubs. Find matches, track scores, and build your tennis community.",
    "primaryColor": "#007AFF",
    "icon": "./assets/images/icon.png",
    "scheme": "playserve",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "usesAppleSignIn": true,
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        },
        "NSLocationWhenInUseUsageDescription": "Play Serve uses your location to find tennis clubs and players near you.",
        "NSPhotoLibraryUsageDescription": "Play Serve needs access to your photo library to upload profile photos.",
        "NSCameraUsageDescription": "Play Serve needs access to your camera to take profile photos.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.caritos.tennis",
      "appleTeamId": "3U8L77G9QV",
      "buildNumber": "1"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.caritos.tennis"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Play Serve uses location to help you discover nearby tennis clubs and find players in your area."
        }
      ],
      "expo-sqlite",
      "expo-apple-authentication",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#007AFF",
          "defaultChannel": "play-serve-notifications"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "5e762118-6d7b-49ae-a824-62279dda7abd"
      }
    },
    "owner": "sotirac"
  }
}
