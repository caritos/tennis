{
  "expo": {
    "name": "Play Serve: Tennis Community",
    "slug": "play-serve",
    "version": "1.0.1",
    "orientation": "portrait",
    "description": "Connect with tennis players in your local clubs. Find matches, track scores, climb rankings, and build your tennis community. Join clubs near you today!",
    "primaryColor": "#007AFF",
    "icon": "./assets/images/retro-tennis-ball-motion.png",
    "scheme": "playserve",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "usesAppleSignIn": false,
      "deploymentTarget": "15.0",
      "jsEngine": "hermes",
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        },
        "NSLocationWhenInUseUsageDescription": "Play Serve uses your location to find tennis clubs and players near you.",
        "NSPhotoLibraryUsageDescription": "Play Serve needs access to your photo library to upload profile photos.",
        "NSCameraUsageDescription": "Play Serve needs access to your camera to take profile photos.",
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["remote-notification"]
      },
      "entitlements": {
        "aps-environment": "production"
      },
      "bundleIdentifier": "com.caritos.tennis",
      "appleTeamId": "3U8L77G9QV",
      "buildNumber": "20250821001"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/retro-tennis-ball-motion.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.caritos.tennis"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/retro-tennis-ball-motion.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Play Serve uses location to help you discover nearby tennis clubs and find players in your area."
        }
      ],
      "expo-sqlite",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/retro-tennis-ball-motion.png",
          "color": "#007AFF",
          "defaultChannel": "play-serve-notifications"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "5e762118-6d7b-49ae-a824-62279dda7abd"
      }
    },
    "owner": "sotirac"
  }
}
