{
  "name": "tennis",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "author": "Eladio Caritos",
  "description": "Connect with tennis players in your local clubs",
  "appMeta": {
    "supportEmail": "support@caritos.com",
    "website": "caritos.com/tennis"
  },
  "scripts": {
    "start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "lint": "expo lint",
    "lint:fix": "expo lint --fix",
    "type-check": "npx tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:unit:watch": "jest --selectProjects unit --watch",
    "test:integration:watch": "jest --selectProjects integration --watch",
    "test:update-snapshots": "jest --updateSnapshot",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "test:all": "npm run test:unit && npm run test:integration",
    "e2e": "./scripts/run-e2e-tests.sh",
    "build:increment": "node scripts/increment-build.js",
    "build:ios": "npm run build:increment && npx eas build --platform ios --profile production",
    "build:ios-preview": "npm run build:increment && npx eas build --platform ios --profile preview",
    "e2e:record": "export PATH=\"$PATH\":\"$HOME/.maestro/bin\" && maestro studio",
    "e2e:check": "./scripts/check-maestro.sh",
    "e2e:devices": "./scripts/run-device-tests.sh",
    "e2e:devices:iphone": "./scripts/run-device-tests.sh iphone",
    "e2e:devices:ipad": "./scripts/run-device-tests.sh ipad",
    "app-store:metadata": "./scripts/update-app-metadata.sh",
    "app-store:safety": "echo 'Safety features implemented: Report/Block system, Community Guidelines'",
    "wiki:update": "./scripts/update-wiki.sh",
    "wiki:generate-faq": "node scripts/generate-wiki-faq.js",
    "wiki:generate-legal": "node scripts/generate-legal-docs.js",
    "checks:pre-commit": "npm run lint && npm run type-check && npm run test:unit",
    "checks:pre-push": "npm run lint && npm run type-check && npm run test:all && npm run e2e:check",
    "checks:all": "npm run lint && npm run type-check && npm run test:all && npm run e2e",
    "bundle:analyze": "npx expo export --dump-assetmap --output-dir ./bundle-analysis",
    "bundle:profile": "EXPO_DEBUG=1 npx expo start",
    "memory:profile": "npx expo start --dev-client",
    "checks:quick": "npm run lint && npm run type-check",
    "checks:fix": "npm run lint:fix && npm run type-check",
    "verify:hooks": "./scripts/verify-hooks.sh",
    "prepare": "husky"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "^2.1.2",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/elements": "^2.5.2",
    "@react-navigation/native": "^7.1.17",
    "@supabase/supabase-js": "^2.52.0",
    "expo": "~53.0.20",
    "expo-apple-authentication": "~7.2.4",
    "expo-blur": "~14.1.5",
    "expo-checkbox": "~4.1.4",
    "expo-constants": "~17.1.7",
    "expo-device": "~7.1.4",
    "expo-font": "~13.3.2",
    "expo-haptics": "~14.1.4",
    "expo-image": "~2.4.0",
    "expo-image-picker": "^16.1.4",
    "expo-linking": "~7.1.7",
    "expo-location": "~18.1.6",
    "expo-notifications": "~0.31.4",
    "expo-router": "~5.1.4",
    "expo-splash-screen": "~0.30.10",
    "expo-sqlite": "~15.2.14",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "~0.4.5",
    "expo-system-ui": "~5.0.10",
    "expo-web-browser": "~14.2.0",
    "jest": "~29.7.0",
    "jest-expo": "~53.0.9",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-radio-buttons-group": "^3.1.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-web": "~0.20.0",
    "react-native-webview": "13.13.5"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.2.0",
    "@types/jest": "^30.0.0",
    "@types/react": "~19.0.10",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~9.2.0",
    "husky": "^9.1.7",
    "typescript": "~5.8.3"
  },
  "private": true
}
